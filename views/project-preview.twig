<article class="project-preview">
    <header>
        <h2 class="project-title">
            <a href="{{ post.link|e('html_attr') }}" rel="bookmark">{{ post.title }}</a>
        </h2>
        {%  if post.terms('project_type') %}
        {% set separator = ' &ndash; ' %}
        <h4>{{ fn('get_ancestors', post.terms('project_type').id, 'project_type', 'project_type')|join(separator) }}</h4>
        {% endif %}
    </header>
    <div class="project-body">
        {% if post.thumbnail %}
            <a href="{{ post.link }}" rel="bookmark" class="project-thumbnail">
                {% include 'img.twig' with { 'src': post.thumbnail.src('thumbnail')|relative, 'alt': post.title } %}
            </a>
        {% endif %}
        <div class="project-excerpt">
            {{ post.get_preview(40, false, __("Read more about %s", THEMENAME)|format(post.title)) }}
        </div>
        <ul class="project-technologies">
            {% for technology in post.terms('technology') %}
                <li>
                    <a href="{{ technology.link }}"><span class="fa fa-hashtag"></span> {{ technology.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</article>