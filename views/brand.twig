<!-- brand -->
<h1 title="{{ site.name }}" class="brand">
    <a href="/" title="{{ site.name }}" rel="home">
        {% if site.logo %}
            <img src="{{ site.logo }}" alt="{{ site.name }}" class="logo">
        {% endif %}
        {{ site.title }}
    </a>
</h1>
<!-- tagline -->
<h2 class="tagline">{{ site.description }}</h2>